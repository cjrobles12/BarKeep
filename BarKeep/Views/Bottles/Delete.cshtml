@model BarKeep.Models.Bottle

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to remove @Html.DisplayFor(model => model.Name) from your inventory? </h3>
<div>
   
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Index")'">No</button>        
        </div>
    }
</div>
