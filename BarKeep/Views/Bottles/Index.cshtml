@model IEnumerable<BarKeep.Models.Bottle>

@{
    ViewBag.Title = "Index";
}

<h2>Bar Overview</h2>

<p>
    @Html.ActionLink("Add New Item", "Create")
</p>

<table class="table table-hover table-striped"> @* uses bootstrap for table styling *@
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Par)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnHand)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Par)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OnHand)
        </td>
        <td>
            <div class="btn-group-sm" role="group" aria-label="Basic example">
                <button type="button" onclick="location.href='@Url.Action("Details", new { id = item.ID })'">Details</button>
                <button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.ID })'">Manage Item</button>
                <button type="button" onclick="location.href='@Url.Action("Delete", new { id = item.ID })'">Remove</button>
            </div>
        </td>
    </tr>
}

</table>
